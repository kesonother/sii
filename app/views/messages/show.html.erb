<h2><%=h @copy.request.subject %></h2>

<pre><%=h @copy.request.details %></pre>
<br />
<% @copy.request_replies.each do |reply| %>
<% if current_user.id == reply.user.id %>
<span><%= reply.user.author %></span>
<% else%>
<span>Vous</span>
<% end %>
<p><%= reply.body %></p>
<%end%>
